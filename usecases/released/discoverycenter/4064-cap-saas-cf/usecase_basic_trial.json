    "executeAfterAccountSetup": [
        {
            "description": "Get the tutorial code",
            "command": "rm -rf /home/user/tutorial && git clone https://github.com/SAP-samples/btp-cf-cap-multitenant-susaas.git -b basic  /home/user/tutorial && cd /home/user/tutorial/ "
        },
        {
            "description": "Create a private mtaext file copy",
            "command": "cp ./tutorial/configs/deployment/trial.mtaext ./tutorial/configs/deployment/trial-private.mtaext"
        },
        {
            "description": "Initialize Broker and update the mtaext file",
            "command": "cd ./tutorial/broker/ && npm i && CREDENTIALS=$(npm run init) && echo \"${CREDENTIALS}\" && HASH=$(echo \"${CREDENTIALS}\" | grep -o 'sha256.*') &&  sed -i 's~<paste your hash credentials here>~'\"$HASH\"'~g' ../configs/deployment/trial-private.mtaext && BR_PASSWORD=$(echo \"${CREDENTIALS}\" | awk '/Plaintext password:/{getline; print}') && echo $BR_PASSWORD > brokerpass.txt"
        },
        {
            "description": "Building multi target application assets",
            "command": "cd ./tutorial && mbt build -e ./configs/deployment/trial-private.mtaext"
        },
        {
            "description": "Deploy app",
            "command": "cd ./tutorial && cf deploy ./mta_archives/susaas_0.0.1.mtar -f"
        },
        {
            "description":"Initializing credstore",
            "command":" cd ./tutorial && sh configs/automator/init-cred-store.sh"
        },
        {
            "description": "Create the consumer usecase file",
            "command": "rm /home/user/usecases/released/discoverycenter/4064-saas-cap-cf/usecase_consumer.json -f && SPACE=$(jq -r '.\"cfspacename\"' /home/user/log/metadata_log.json) && ORG=$(jq -r '.\"org\"' /home/user/log/metadata_log.json) && sed -e \"s~<provider-space>~$SPACE~g\" -e \"s~<provider-org>~$ORG~g\" \"/home/user/usecases/released/discoverycenter/4064-saas-cap-cf/usecase_consumer_tmpl.json\" >> \"/home/user/usecases/released/discoverycenter/4064-saas-cap-cf/usecase_consumer.json\""
        },
        {
            "description": "Execute customer usercase",
            "command": "GLOBALACCOUNT=$(jq -r '.\"globalaccount\"' /home/user/log/metadata_log.json) && MYEMAIL=$(jq -r '.\"myemail\"' /home/user/log/metadata_log.json) && SUBACCOUNT=$(jq -r '.\"subaccount\"' /home/user/log/metadata_log.json) && SUBACCOUNTID=$(jq -r '.\"subaccountid\"' /home/user/log/metadata_log.json)  && ./btpsa -parameterfile 'usecases/released/discoverycenter/4064-saas-cap-cf/parameters.json' -usecasefile 'usecases/released/discoverycenter/4064-saas-cap-cf/usecase_consumer.json' -globalaccount $GLOBALACCOUNT -myemail $MYEMAIL -subaccountname $CONSUMER_SUBACCOUNT_NAME -customAppProviderSubaccountId $SUBACCOUNTID"
        }
    ],
    "executeToPruneUseCase": [
        {
            "description": "Undeploy the SaaS application",
            "command": "cf undeploy susaas --delete-service-brokers --delete-service-keys --delete-services -f"
        }
    ],
