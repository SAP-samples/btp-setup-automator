            "category": "SERVICE",
            "repeatstatusrequest": 60,
            "repeatstatustimeout": 3600,
            "instancename": "hana-cloud",
            "parameters": {
                "data": {
                    "edition": "cloud",
                    "memory": 30,
                    "serviceStopped": false,
                    "storage": 120,
                    "systempassword": "PleaseChangeBeforeRunningScript12345",
                    "vcpu": 0,
                    "versionIndicator": "",
                    "whitelistIPs": [
                        "0.0.0.0/0"
                    ]
                }
            }
        },
        {
            "name": "hana",
            "plan": "hdi-shared",
            "category": "SERVICE",
